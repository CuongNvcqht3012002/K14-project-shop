<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Yolo - Trang chá»§</title>
	<link rel="stylesheet" href="../../public/css/header.css" />
	<link rel="stylesheet" href="../../public/css/footer.css" />
	<link rel="stylesheet" href="../../public/css/homeBase.css" />
	<link rel="stylesheet" href="../../public/css/news.css" />
	<link rel="stylesheet" href="../../public/css/product-card.css" />
	<link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
	<link href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css" rel="stylesheet" />
</head>
<style>
	:root {
		--blue-color: #4267b2;
		--pink-color: #fe7e73;
		--orange-color: #fbb96b;
	}
</style>

<body>
	<%- include ('../components/header'); -%>

		<div class="container">
			<div class="main">
				<div>
					<div class="section">
						<div class="section-title">News</div>
						<div class="section-body">
							<div class="grid-rows">
								<% news.forEach(n => { %>
									<div class="grid-col-half" data-aos="fade-down">
										<div class="news-card">
											<a href="/news/<%= n._id %>">
												<div class="news-banner">
													<img src="<%= n.banner %>" alt="banner image error">
												</div>
											</a>
											<div class="news-description">
												<h4 class="news-title">
													<%= n.title %>
												</h4>
												<p class="news-description__content">
													<%= n.description.replace(/<[^>]+>/g, '') %>
												</p>
												<div class="news-description_time">
													<% var date = new Date(n.updatedAt); %>
													<%= date.getFullYear()+'-' + (date.getMonth()+1) + '-'+date.getDate(); %> 
												</div>
											</div>
										</div>
									</div>
								<% }) %> 
							</div>
						</div>
					</div>
					<div class="section">
						<div class="section-title">Featured Collection</div>
						<div class="section-body" data-aos="fade-up">
							<div id="featured-product" class="owl-carousel">
								<% featuredIndex.forEach(i => { %>
									<%- include ('../components/product-card',{
										id:products[i]._id,
										imgFront: products[i].images[0],
										imgBack: products[i].images[1],
										name: products[i].name,
										price: products[i].cost
									}) -%>
								<% }) %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<%- include ('../components/footer'); -%>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
			<script src="../../public/js/header.js"></script>
			<script src="/public/js/logout.js"></script>
			<script src="https://unpkg.com/aos@next/dist/aos.js"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
			<script src="/public/js/news.js"></script>
			<script>
				AOS.init();
			</script>
</body>

</html>